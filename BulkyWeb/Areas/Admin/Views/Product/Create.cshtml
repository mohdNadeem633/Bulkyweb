 @model ProductVM
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
             
            @* <div asp-validation-summary="All"></div> *@
            @* <div asp-validation-summary="ModelOnly"></div> *@

                <div class="form-floating py-2 col-12">
                    <lebal asp-for="Product.Title" class="ms-2"> Title</lebal>
                    <input asp-for="Product.Title" class="form-control border-0 shadow" />
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <lebal asp-for="Product.Description" class="ms-2"> Description</lebal>
                    <textarea asp-for="Product.Description" class="form-control border-0 shadow" ></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <lebal asp-for="Product.ISBN" class="ms-2"> ISBN</lebal>
                    <input asp-for="Product.ISBN" class="form-control border-0 shadow" />
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <lebal asp-for="Product.Author" class="ms-2"> Author</lebal>
                    <input asp-for="Product.Author" class="form-control border-0 shadow" />
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <lebal asp-for="Product.LastPrice" class="ms-2"> Last Price</lebal>
                    <input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <lebal asp-for="Product.Price" class="ms-2"> Price</lebal>
                    <input asp-for="Product.Price" class="form-control border-0 shadow" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <lebal asp-for="Product.Price50" class="ms-2"> Price50</lebal>
                    <input asp-for="Product.Price50" class="form-control border-0 shadow" />
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <lebal asp-for="Product.Price100" class="ms-2"> Price100</lebal>

                    <input asp-for="Product.Price100" class="form-control border-0 shadow" />
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>

                </div>

                @* how to add the lov(list value) foreign key as a Dropdown in child table
                 I also add the ViewBag in this section *@
                 <div class="form-floating py-2 col-12">
                    @* <select asp-for="Product.CategoryId" asp-items="ViewBag.CategoryList" class="form-control border-0 shadow"> *@
                    <lebal asp-for="Product.CategoryId" class="ms-2"> CategoryID</lebal>

                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-control border-0 shadow">
                        <option disabled selected>--Selected Category--</option>
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>

                </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>

                <div class="col-6 col-md-3">

                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List</a>

                </div>

            </div>

            </div> 
        </form>
        </div>

</div>



@* adding the serverside validation doing these things *@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}