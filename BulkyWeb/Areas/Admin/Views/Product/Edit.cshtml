@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="ProductId" type="hidden" />
            <div class="border p-3 mt-4">

                @* <div asp-validation-summary="All"></div> *@
                @* <div asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" />
                    <lebal asp-for="Title" class="ms-2"> Title</lebal>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" class="form-control border-0 shadow" ></textarea>
                    <lebal asp-for="Description" class="ms-2"> Description</lebal>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow" />
                    <lebal asp-for="ISBN" class="ms-2"> ISBN</lebal>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" />
                    <lebal asp-for="Author" class="ms-2"> Author</lebal>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow" />
                    <lebal asp-for="LastPrice" class="ms-2"> LastPrice</lebal>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" />
                    <lebal asp-for="Price" class="ms-2"> Price</lebal>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" class="form-control border-0 shadow" />
                    <lebal asp-for="Price50" class="ms-2"> Price50</lebal>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" class="form-control border-0 shadow" />
                    <lebal asp-for="Price100" class="ms-2"> Price100</lebal>
                    <span asp-validation-for="Price100" class="text-danger"></span>

                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="CategoryId" class="form-control border-0 shadow" />
                    <lebal asp-for="CategoryId" class="ms-2"> CategoryId</lebal>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>

                </div>

                <div class="row pt-2 mt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>

                    <div class="col-6 col-md-3">

                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List</a>

                    </div>

                </div>

            </div>
        </form>
    </div>

</div>



@* adding the serverside validation doing these things *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}