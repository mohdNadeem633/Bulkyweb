@page
@model BulkyWebRazor_Temp.Pages.Categories.EditModel

<form method="post">

    @*  if your id is some other name like category then you have to
    do input asp-for and hidden otherwise it will create
    a new record instead of edit record *@

    <input asp-for="Category.CategoryId" hidden />

    <div class="boarder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category </h2>
            <hr />
        </div>

    </div>
    @* <div asp-validation-summary="All"></div> *@
    <div asp-validation-summary="ModelOnly"></div>

    <div class="mb-3 row">
        <lebal asp-for="Category.Name"> Category Name</lebal>
        <input asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-danger"></span>

    </div>
    <div class="mb-3 row">
        <lebal asp-for="Category.DisplayOrder"> Display Order</lebal>
        <input asp-for="Category.DisplayOrder" class="form-control" />
        <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>

    </div>


    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Update</button>
        </div>

        <div class="col-6 col-md-3">

            <a asp-page="/categories/index" class="btn btn-outline-secondary border form-control">Back to List</a>

        </div>

    </div>


</form>


@* adding the serverside validation doing these things *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}