@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">

	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary"> Category

			</h2>

		</div>
		<div class="col-6 text-end">
			  <a asp-page="Category" class=" btn btn-primary">
				<i class="bi bi-plus-circle-fill"></i> Add Category
			</a>
		</div>

	</div>

<table class="table table-bordered table-hover">
	<thead>
	<tr>
		<th>
			Category Name
		</th>
		<th>

		Display Order
</th>
<th> Edit/Delete</th>
	</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
		{
			<tr>
				<td>
					@obj.Name
				</td>
				<td>
					@obj.DisplayOrder
				</td>
				<td>
					<div class="w-75 btn-group " role="group">
					<a asp-page="category/edit" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2" >
						<i class="bi bi-pencil-square"></i> Edit
					</a>
							<a asp-controller="Category/delete" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2">
								<i class="bi bi-trash-fill"></i> Delete
							</a>
					
					</div>
				</td>
			</tr>
		}
		
	</tbody>

	</table>
</div>